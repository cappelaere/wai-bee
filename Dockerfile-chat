# Multi-stage build for WAI Scholarship Chat Frontend
# Stage 1: Builder - Install dependencies
FROM python:3.11-slim AS builder

# Set working directory
WORKDIR /app

# Install system dependencies required for building Python packages
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    gcc \
    g++ \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements file
COPY requirements-chat.txt .

# Create virtual environment and install dependencies
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Upgrade pip and install wheel
RUN pip install --no-cache-dir --upgrade pip setuptools wheel

# Install Python dependencies (minimal set for chat frontend)
RUN pip install --no-cache-dir -r requirements-chat.txt

# Stage 2: Runtime - Create minimal production image
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install runtime system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy virtual environment from builder
COPY --from=builder /opt/venv /opt/venv

# Set environment variables
ENV PATH="/opt/venv/bin:$PATH" \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app

# Create non-root user for security
RUN useradd -m -u 1000 chatuser && \
    mkdir -p /app/outputs /app/logs /app/config /app/bee_agents/static /app/bee_agents/templates && \
    chown -R chatuser:chatuser /app

# Copy only necessary files for chat frontend
COPY --chown=chatuser:chatuser .env .env
COPY --chown=chatuser:chatuser bee_agents/__init__.py bee_agents/
COPY --chown=chatuser:chatuser bee_agents/chat_api.py bee_agents/
COPY --chown=chatuser:chatuser bee_agents/auth.py bee_agents/
COPY --chown=chatuser:chatuser bee_agents/middleware.py bee_agents/
COPY --chown=chatuser:chatuser bee_agents/logging_config.py bee_agents/
COPY --chown=chatuser:chatuser bee_agents/openapi.json bee_agents/
COPY --chown=chatuser:chatuser bee_agents/static/ bee_agents/static/
COPY --chown=chatuser:chatuser bee_agents/templates/ bee_agents/templates/
COPY --chown=chatuser:chatuser config/ config/

# Switch to non-root user
USER chatuser

# Create necessary directories
RUN mkdir -p outputs logs

# Expose port
EXPOSE 8100

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8100/health || exit 1

# Default environment variables (can be overridden)
ENV HOST=0.0.0.0 \
    PORT=8100 \
    CHAT_MODEL=anthropic:claude-sonnet-4-20250514

# Run the chat server
CMD ["python", "-m", "bee_agents.chat_api", "--host", "0.0.0.0", "--port", "8100"]