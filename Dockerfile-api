# Multi-stage build for WAI Scholarship Analysis API
# Stage 1: Builder - Install dependencies
FROM python:3.11-slim AS builder

# Set working directory
WORKDIR /app

# Install system dependencies required for building Python packages
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    gcc \
    g++ \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements file
COPY requirements-api.txt .

# Create virtual environment and install dependencies
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Upgrade pip and install wheel
RUN pip install --no-cache-dir --upgrade pip setuptools wheel

# Install Python dependencies (minimal set for API only)
RUN pip install --no-cache-dir -r requirements-api.txt

# Stage 2: Runtime - Create minimal production image
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install runtime system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy virtual environment from builder
COPY --from=builder /opt/venv /opt/venv

# Set environment variables
ENV PATH="/opt/venv/bin:$PATH" \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app

# Create non-root user for security
RUN useradd -m -u 1000 apiuser && \
    mkdir -p /app/outputs /app/logs /app/data /app/config && \
    chown -R apiuser:apiuser /app

# Copy application code and .env file
COPY --chown=apiuser:apiuser bee_agents/ .
COPY --chown=apiuser:apiuser models/ .
COPY --chown=apiuser:apiuser schemas/ .
COPY --chown=apiuser:apiuser utils/ .

COPY --chown=apiuser:apiuser .env .env

# Switch to non-root user
USER apiuser

# Create necessary directories
RUN mkdir -p outputs/application outputs/academic outputs/essay outputs/recommendation outputs/attachment outputs/summary logs

# Expose port
EXPOSE 8200

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8200/health || exit 1

# Default environment variables (can be overridden)
ENV SCHOLARSHIP=Delaney_Wings \
    OUTPUT_DIR=outputs \
    HOST=0.0.0.0 \
    PORT=8200

# Run the API server with uvicorn and auto-reload for development
CMD ["uvicorn", "bee_agents.api:app", "--host", "0.0.0.0", "--port", "8200", "--reload"]